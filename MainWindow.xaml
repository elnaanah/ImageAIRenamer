<Window x:Class="ImageAIRenamer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageAIRenamer"
        mc:Ignorable="d"
        Title="Image AI Renamer" Height="700" Width="1000"
        FontFamily="Segoe UI" FontSize="14"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- API Keys -->
        <GroupBox Header="API Configuration" Grid.Row="0" Margin="0,0,0,20" Padding="10">
            <StackPanel>
                <TextBlock Text="Enter Gemini API Keys (one per line):" Margin="0,0,0,5"/>
                <TextBox x:Name="ApiKeysBox" Height="60" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" 
                         TextWrapping="NoWrap" Padding="5"/>
            </StackPanel>
        </GroupBox>

        <!-- Folder Selection -->
        <GroupBox Header="Folder Selection" Grid.Row="1" Margin="0,0,0,20" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Source Folder:" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0"/>
                <TextBox x:Name="SourceFolderBox" Grid.Row="0" Grid.Column="1" Margin="10,0" Padding="5" IsReadOnly="True"/>
                <Button Content="Browse..." Click="BrowseSource_Click" Grid.Row="0" Grid.Column="2" Padding="15,5"/>

                <TextBlock Text="Output Folder:" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0"/>
                <TextBox x:Name="OutputFolderBox" Grid.Row="2" Grid.Column="1" Margin="10,0" Padding="5" IsReadOnly="True"/>
                <Button Content="Browse..." Click="BrowseOutput_Click" Grid.Row="2" Grid.Column="2" Padding="15,5"/>
            </Grid>
        </GroupBox>

        <!-- Custom Instructions -->
        <GroupBox Header="Custom AI Instructions" Grid.Row="2" Margin="0,0,0,20" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="CustomInstructionsBox" Grid.Column="0" Height="60" 
                         AcceptsReturn="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" 
                         Padding="5" Margin="0,0,10,0"
                         ToolTip="Add extra instructions like 'Extract name from below the img' or 'Rename based on title'"/>
                <Button Content="Clear" Click="ClearInstructions_Click" Grid.Column="1" VerticalAlignment="Top" Padding="10,5"/>
            </Grid>
        </GroupBox>

        <!-- Image List -->
        <DataGrid x:Name="ImagesGrid" Grid.Row="3" AutoGenerateColumns="False" IsReadOnly="True" 
                  CanUserAddRows="False" BorderThickness="1" BorderBrush="#DDDDDD">
            <DataGrid.Resources>
                <Style TargetType="DataGridCell">
                    <Setter Property="Padding" Value="5"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Preview" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding FilePath}" Height="80" Stretch="Uniform" 
                                   MouseLeftButtonUp="Image_MouseLeftButtonUp" Cursor="Hand" ToolTip="Click to open"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Original Name" Binding="{Binding OriginalName}" Width="*"/>
                <DataGridTextColumn Header="New Name" Binding="{Binding NewName}" Width="*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="150">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Status}" Value="Done">
                                    <Setter Property="Foreground" Value="Green"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="Error">
                                    <Setter Property="Foreground" Value="Red"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Actions -->
        <Grid Grid.Row="4" Margin="0,20,0,0">
            <Button Content="Clear" HorizontalAlignment="Left" Click="ClearList_Click" Padding="20,10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock x:Name="StatusText" VerticalAlignment="Center" Margin="0,0,20,0" Foreground="Gray" FontSize="12"/>
                <ProgressBar x:Name="ProgressBar" Width="200" Height="25" Margin="0,0,20,0" Visibility="Collapsed"/>
                <Button x:Name="ProcessButton" Content="Start Renaming" Click="Process_Click" Padding="30,10" IsEnabled="False" Background="#007ACC" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
